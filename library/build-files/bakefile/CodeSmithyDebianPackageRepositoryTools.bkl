toolsets = gnu vs2022 vs2019 vs2017 vs2015;

gnu.makefile = ../gnumake/GNUmakefile;
vs2022.solutionfile = ../vc17/CodeSmithyDebianPackageRepositoryTools.sln;
vs2019.solutionfile = ../vc16/CodeSmithyDebianPackageRepositoryTools.sln;
vs2017.solutionfile = ../vc15/CodeSmithyDebianPackageRepositoryTools.sln;
vs2015.solutionfile = ../vc14/CodeSmithyDebianPackageRepositoryTools.sln;

library CodeSmithyDebianPackageRepositoryTools
{
    includedirs += ../../include/CodeSmithy/DebianPackageRepositoryTools;

    if ($(toolset) == gnu)
    {
        cxx-compiler-options = "-std=c++11";
        outputdir = ../../lib;
    }

    if ($(toolset) != gnu)
    {
        archs = x86 x86_64;
        outputdir = ../../lib/$(arch);
    }

    if ($(config) == Debug)
    {
        basename = CodeSmithyDebianPackageRepositoryTools-d;
    }

    headers
    {
        ../../include/CodeSmithy/DebianPackageRepositoryTools.hpp
        ../../include/CodeSmithy/DebianPackageRepositoryTools/DebianPackageRepositoryManager.hpp
        ../../include/CodeSmithy/DebianPackageRepositoryTools/linkoptions.hpp
    }

    sources
    {
        ../../src/DebianPackageRepositoryManager.cpp
    }
}
